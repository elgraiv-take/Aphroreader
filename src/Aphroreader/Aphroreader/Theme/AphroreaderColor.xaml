<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Elgraiv.Aphroreader.Theme">

    <Color x:Key="AphWindowColor">#FF484D52</Color>
    <Color x:Key="AphBackgroundColor">#FF1C1D20</Color>
    <Color x:Key="AphBackgroundLightColor">#FF484D52</Color>
    <Color x:Key="AphBorderColor">#FF777989</Color>
    <Color x:Key="AphForegroundColor">#FFD3D5E1</Color>
    <Color x:Key="AphForcucedBorderColor">#FF5278FF</Color>
    <Color x:Key="AphDisabledForegroundColor">#FF990000</Color>


    <SolidColorBrush x:Key="AphWindowColorBrush" Color="{DynamicResource AphWindowColor}" />
    <SolidColorBrush x:Key="AphBackgroundBrush" Color="{DynamicResource AphBackgroundColor}" />
    <SolidColorBrush x:Key="AphBorderBrush" Color="{DynamicResource AphBorderColor}" />
    <SolidColorBrush x:Key="AphForegroundBrush" Color="{DynamicResource AphForegroundColor}" />
    <SolidColorBrush x:Key="AphForcucedBorderBrush" Color="{DynamicResource AphForcucedBorderColor}" />
    <SolidColorBrush x:Key="AphBackgroundLightBrush" Color="{DynamicResource AphBackgroundLightColor}" />
</ResourceDictionary>